<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_resource_bg"
    android:padding="4dp" >

    <ImageView
        android:id="@+id/iv_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="1dp"
        android:src="@drawable/logo48" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_item_info"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_item_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="resource name"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_default_size" />

            <TextView
                android:id="@+id/tv_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="resource date"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_default_size" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_item_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="resource author"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_default_size" />

            <TextView
                android:id="@+id/tv_item_catalog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="resource catalog"
                android:textColor="@color/text_orange"
                android:textSize="@dimen/text_default_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="resource desc resource desc resource desc resource desc"
            android:textColor="@color/text_light"
            android:textSize="@dimen/text_default_size" />
    </LinearLayout>

</RelativeLayout>